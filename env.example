import { NextRequest, NextResponse } from "next/server";
import axios from "axios";
import * as cheerio from "cheerio";

// Telegram bot bilgileri
const TG_TOKEN = process.env.TG_TOKEN;
// TG_CHAT_ID webhook handler iÃ§inde gelen mesajdan alÄ±nacaÄŸÄ± iÃ§in burada kullanÄ±lmaz.

// Ankara Adliyesi arÅŸiv sayfasÄ±
const DUYURULAR_URL = "https://ankara.adalet.gov.tr/Arsiv/tumu";

interface Duyuru {
  title: string;
  link: string;
  date: string;
  id: string;
}

/**
 * Linkin tam bir URL olup olmadÄ±ÄŸÄ±nÄ± kontrol eder.
 * @param url Kontrol edilecek link
 */
const isAbsoluteUrl = (url: string) => /^(?:[a-z]+:)?\/\//i.test(url);


/**
 * Ankara Adliyesi arÅŸiv sayfasÄ±ndan duyurularÄ± Ã§ek
 */
async function fetchDuyurular(): Promise<Duyuru[]> {
  try {
    const response = await axios.get(DUYURULAR_URL, {
      headers: {
        "User-Agent":
          "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36",
        Accept:
          "text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8",
        "Accept-Language": "tr-TR,tr;q=0.8,en-US;q=0.5,en;q.3",
      },
    });
    const $ = cheerio.load(response.data);
    const duyurular: Duyuru[] = [];
    const baseUrl = "https://ankara.adalet.gov.tr";

    // Duyuru listesini Ã§ekme mantÄ±ÄŸÄ±
    $(".media-list li").each((i, element) => {
      const titleElement = $(element).find(".media-body h4 a");
      const title = titleElement.text().trim();
      let link = titleElement.attr("href") || "";
      const date = $(element).find(".media-body .date").text().trim();

      // MANTIK HATASI Ã‡Ã–ZÃœMÃœ A: Link birleÅŸtirme kontrolÃ¼
      if (link && !isAbsoluteUrl(link)) {
         link = baseUrl + link;
      }

      if (title && link) {
        duyurular.push({
          title: title,
          link: link, // ArtÄ±k tam URL
          date: date || "Tarih Yok",
          id: link.split("/").pop() || i.toString(),
        });
      }
    });

    return duyurular;
  } catch (error: unknown) { // HATA Ã‡Ã–ZÃœMÃœ B: Hata yakalama dÃ¼zeltildi
    console.error("Duyuru Ã§ekme hatasÄ±:", error);
    return [];
  }
}

/**
 * Telegram'a mesaj gÃ¶nder
 */
async function sendTelegramReply(chatId: string, message: string): Promise<void> {
  if (!TG_TOKEN) {
    // DÄ°KKAT: TG_TOKEN'Ä±n Vercel'de eksik olmasÄ± durumunda daha net bir hata logu.
    console.error("HATA: TG_TOKEN ortam deÄŸiÅŸkeni eksik. Mesaj gÃ¶nderilemedi. LÃ¼tfen Vercel ortam deÄŸiÅŸkenlerini kontrol edin.");
    return;
  }

  const url = `https://api.telegram.org/bot${TG_TOKEN}/sendMessage`;
  
  try {
    await axios.post(url, {
      chat_id: chatId,
      text: message,
      parse_mode: 'HTML', // HTML formatÄ±nÄ± desteklemesi iÃ§in
    });
  } catch (error: unknown) {
    // Mesaj gÃ¶nderme baÅŸarÄ±sÄ±z olsa bile (Ã¶rneÄŸin bot engellendi), Webhook'a 200 dÃ¶nmek iÃ§in hatayÄ± yakalayÄ±p logluyoruz.
    const errorMessage = axios.isAxiosError(error) 
        ? error.response?.data || error.message 
        : (error instanceof Error ? error.message : "Bilinmeyen Hata");

    console.error("Telegram mesajÄ± gÃ¶nderme hatasÄ±:", errorMessage);
  }
}

/**
 * Duyuru listesini Telegram mesajÄ± formatÄ±na dÃ¶nÃ¼ÅŸtÃ¼rÃ¼r.
 */
function formatDuyuruList(duyurular: Duyuru[]): string {
  if (duyurular.length === 0) {
    return "ğŸ“‹ <b>HenÃ¼z gÃ¼ncel duyuru bulunamadÄ±.</b>";
  }

  let message = "ğŸ“‹ <b>Son 3 Duyuru</b>\n\n";

  duyurular.slice(0, 3).forEach((duyuru, index) => {
    // Duyuru baÅŸlÄ±ÄŸÄ±ndaki gereksiz boÅŸluklarÄ± temizleyerek daha okunabilir hale getiriyoruz
    const cleanTitle = duyuru.title.replace(/\s\s+/g, ' ').trim(); 
    message += `${index + 1}. <b>${cleanTitle}</b>\n`;
    message += `   ğŸ“… ${duyuru.date}\n`;
    message += `   ğŸ”— <a href="${duyuru.link}">Duyuruyu GÃ¶rÃ¼ntÃ¼le</a>\n\n`;
  });

  message += "#AnkaraAdliye #Duyuru";
  return message;
}

/**
 * POST endpoint - Telegram webhook
 */
export async function POST(request: NextRequest) {
  try {
    const body = await request.json();

    // Telegram webhook mesajÄ±nÄ± kontrol et
    if (!body.message || !body.message.text || !body.message.chat) {
      // Mesaj tipi (Ã¶rneÄŸin kanal postu) desteklenmiyorsa sessizce baÅŸarÄ±lÄ± dÃ¶n
      return NextResponse.json({ success: true });
    }

    const message = body.message;
    const chatId = message.chat.id.toString();
    const text = message.text.toLowerCase().trim();
    const command = text.split(" ")[0].split("@")[0]; // Komutu ve bot adÄ±nÄ± ayÄ±r

    console.log(`Telegram mesajÄ± alÄ±ndÄ±: "${text}" - Chat ID: ${chatId}`);

    let replyMessage = "Bilinmeyen komut. DuyurularÄ± gÃ¶rmek iÃ§in /duyuru yazabilirsiniz.";

    if (command === "/start") {
        replyMessage = "ğŸ‘‹ Merhaba! Ankara Adliyesi duyurularÄ±nÄ± takip etmek iÃ§in hazÄ±rÄ±m.\n\nSon duyurularÄ± gÃ¶rmek iÃ§in: <b>/duyuru</b>";
    } else if (command === "/duyuru") {
      const duyurular = await fetchDuyurular();
      replyMessage = formatDuyuruList(duyurular);
    } else if (command === "/ayarlar") {
        // KullanÄ±cÄ±nÄ±n botun amacÄ±nÄ± anlamasÄ± iÃ§in daha detaylÄ± bilgi veriyoruz
        replyMessage = "âš™ï¸ <b>Ayarlar ve Bilgi MenÃ¼sÃ¼</b>\n\nBu bot, Ankara Adliyesi'nin 'ZabÄ±t KatipliÄŸi SÄ±navlarÄ±' gibi belirli duyurularÄ±nÄ± dÃ¼zenli olarak kontrol eder ve bildirir.\n\n<b>Mevcut Durum:</b> Bot, cron job aracÄ±lÄ±ÄŸÄ±yla dÃ¼zenli olarak kontrol yapacak ÅŸekilde ayarlanmÄ±ÅŸtÄ±r. Manuel bildirim ayarÄ± ÅŸu an iÃ§in mevcut deÄŸildir.\n\n<b>Son Duyurular:</b> /duyuru";
    }

    await sendTelegramReply(chatId, replyMessage);

    // Telegram'a her zaman baÅŸarÄ±lÄ± (200 OK) yanÄ±tÄ± dÃ¶n
    return NextResponse.json({ success: true });

  } catch (error: unknown) { 
    console.error("Telegram webhook iÅŸleme hatasÄ±:", error);
    
    // Hata mesajÄ±nÄ± gÃ¼venli bir ÅŸekilde yakala
    const errorMessage = error instanceof Error ? error.message : "Bilinmeyen bir hata oluÅŸtu";

    // Hata olsa bile Telegram'Ä±n tekrar denemesini engellemek iÃ§in baÅŸarÄ±lÄ± (200) dÃ¶nmek kritik
    return NextResponse.json({ 
      success: false, 
      message: "Ä°Ã§ sunucu hatasÄ±, ancak Telegram isteÄŸi baÅŸarÄ±lÄ± kabul edildi.",
      details: errorMessage
    }, { status: 200 }); 
  }
}
